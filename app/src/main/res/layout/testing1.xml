<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ldt.NewDefinitionMusicApp.activities.Main2Activity"
    android:id="@+id/rootMain">
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:id="@+id/z_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:id="@+id/text_myList"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:text="My List"
            android:textColor="#aa000000"
            android:textSize="15dp"
            android:gravity="center"
            />
        <GridView
            android:id="@+id/gridView"
            android:layout_below="@id/text_myList"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#08A9EA"
            android:columnWidth="90dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:gravity="center">
        </GridView>
    </RelativeLayout>
    <TextView
        android:layout_below="@id/z_action_bar"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        />
    <ListView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/mylist"
        android:layout_below="@id/z_action_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
